<div class="row">
  <div class="col-sm-4 view-add-buttons">
    <button onclick="togglePlanDisplay()" id="plan-display-button" class="btn btn-primary btn-lg btn-block">View
      Upcoming Plans</button>
  </div>
</div>







<div class="row">
  <div class="col-sm-6">
    <form class="form plan-form">
      <div class="form-group">
        <label for="addCreator">Please enter your username.</label>
        <input type="text" class="form-control" id="addCreator" placeholder="Enter your username">
      </div>
      <div class="form-group">
        <label for="addPlanName">What is your plan called?</label>
        <input type="text" class="form-control" id="addPlanName" placeholder="Enter plan name">
      </div>
      <div class="form-group">
        <label for="addPlanParticipant">Who else will be participating?</label>
        <input type="text" class="form-control" id="addPlanParticipant" placeholder="Enter participant username">
      </div>
      <div class="form-group">
        <label for="addPlanDate">What is the date and time of your plan?</label>
        <div class='input-group date' id='datetimepicker1'>
          <input type='text' class="form-control" id="addDateTime" />
          <span class="input-group-addon">
            <span class="glyphicon glyphicon-calendar"></span>
          </span>
        </div>
        <button type="submit" class="btn btn-primary">Add Plan</button>
      </div>
    </form>
  </div>
</div>


<div class="row">
  <div class="col-sm-4 view-add-buttons">
    <button onclick="togglePlanForm(); " document.getElementById('addPlanName', 'addPlanParticipant' ).value=''""
      id="form-display-button" class="btn btn-primary btn-lg btn-block">Add New Plan</button>
  </div>
</div>




